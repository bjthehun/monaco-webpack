{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist/",
		"target": "ES2022",
		"strict": true,
		"sourceMap": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"module": "ES2022",
		"moduleResolution": "Node16",
		"lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
		"types": ["node", "mocha"]
	}
}
